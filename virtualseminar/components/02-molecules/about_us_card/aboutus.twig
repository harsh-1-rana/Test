{% set base_class = 'aboutus_container' %}

{% block aboutussec %}
  <div {{ bem(base_class) }}>
    <div {{ bem('aboutus_card_heading', [], base_class) }}>
      {% include '@atoms/text/headings/_heading.twig' with {
        heading: aboutus_card_heading
      } %}
    </div>
    <div {{ bem('aboutus_card_paragraph', [], base_class) }}>
      {% include '@atoms/text/text/01-paragraph.twig' with {
        paragraph_content: aboutus_paragraph_content
      } %}
    </div>
    {% block myli %}
      <ul {{ bem('aboutus_lists', [], base_class) }}>
        {% for item in ul_items %}
          {% include '@atoms/lists/_list-item.twig' with {
            list_item_content: item.content
          } %}
        {% endfor %}
      </ul>
    {% endblock %}
  </div>
{% endblock %}
