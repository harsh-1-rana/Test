{% set base_class = 'navigation_container' %}

{% block navigation %}
  <div {{ bem(base_class) }}>
    <div {{ bem('site_branding', [], base_class) }}>
      {% include '@atoms/images/image/_image.twig' with {
        image_src: site_branding_src,
        image_alt: site_branding_alt
      } %}

      {% include '@atoms/links/link/link.twig' with {
        link_url: site_branding_url,
        link_content: site_branding_content
      } %}
    </div>

    <div {{ bem('nav_links', [], base_class) }}>
      {% for item in nav_items %}
        {% include '@atoms/links/link/link.twig' with {
          link_url: item.nav_url,
          link_content: item.nav_content
        } %}
      {% endfor %}
      {% include '@atoms/buttons/button.twig' with {
        button_content: nav_button_content,
        button_url: nav_button_url
      } %}
    </div>
    <div id="nav-icon3">
      <span></span>
      <span></span>
      <span></span>
      <span></span>
    </div>

    <div {{ bem('nav_button', [], base_class) }}></div>
  </div>
{% endblock %}
{% block myJavascript %}
  <script>
    $( function () { $('#nav-icon3').click( function () {
    $(".navigation_container__nav_links a").slideToggle("fast");
    $(".navigation_container__nav_links button").slideToggle("fast"); }); });
    $(document).ready(function(){ $('#nav-icon3').click(function(){
    $(this).toggleClass('open'); }); });
  </script>
{% endblock %}
