{% set base_class = 'services_container' %}

{% block servicesec %}
  <div {{ bem(base_class) }}>
    <div {{ bem('service_image_wrapper', [], base_class) }}>
      {% include '@atoms/images/image/_image.twig' with {
        image_src: service_img_src,
        image_alt: service_img_alt
      } %}
    </div>

    <div {{ bem('service_content_wrapper', [], base_class) }}>
      {% include '@atoms/links/link/link.twig' with {
        link_url: service_link_url,
        link_content: service_link_content
      } %}
      {% include '@atoms/text/text/01-paragraph.twig' with {
        paragraph_content: service_paragraph_content
      } %}
    </div>
  </div>
{% endblock %}
